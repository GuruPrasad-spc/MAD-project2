<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mad_project"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />  <!-- Required for Firebase -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MADproject">

        <activity
            android:name=".firstpage"
            android:exported="true"
            tools:ignore="MissingClass,WrongManifestParent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".second" android:exported="true"
            tools:ignore="MissingClass,WrongManifestParent" />
        <activity android:name=".RegisterActivity" android:exported="true"
            tools:ignore="MissingClass,WrongManifestParent" />
        <activity android:name=".login" android:exported="true"
            tools:ignore="MissingClass,WrongManifestParent" />
        <activity android:name=".EventActivity" android:exported="true"
            tools:ignore="Instantiatable,MissingClass,WrongManifestParent" />
        <activity android:name=".Main" android:exported="true"
            tools:ignore="Instantiatable,MissingClass,WrongManifestParent" />
    </application>

</manifest>
